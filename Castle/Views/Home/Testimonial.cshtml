
@{
    ViewData["Title"] = "Testimonial";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <form method="post">
                <fieldset class="form-group">
                    <h4>I'm a:</h4>
                    <div class="form-check">
                        <label class="form-check-label"><input class="form-check-input" type="radio" name="identity" value="Player" /> Player</label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label"><input class="form-check-input" type="radio" name="identity" value="Fan" /> Fan</label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label"> <input class="form-check-input" type="radio" name="identity" value="Captain" /> Captain</label>
                    </div>
                    <div class="form-check">
                        <input class="hidden" type="radio" name="identity" value="Anonymous" checked />
                        </div>
                </fieldset>
                <fieldset class="form-group">
                    <h4>New Submission:</h4>
                    <textarea class="form-control" rows="5" name="body"></textarea>
                </fieldset>
                <fieldset class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </fieldset>
            </form>
        </div>
        <div class="col-sm-6">
            @foreach (var testimonial in ViewBag.Testimonials)
            {
                if (testimonial.IsApproved)
                {
                    <h2 class="testimonial head">@testimonial.Identity</h2>
                    <p class="testimonial body">@testimonial.Body</p>

                }

            }
        </div>
    </div>
</div>

